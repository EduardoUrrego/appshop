<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Producto">

    <ImageView
        android:id="@+id/image"
        android:layout_width="167dp"
        android:layout_height="157dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/gallery_thumb"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:src="@drawable/pan"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="169dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="137dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:fontFamily="sans-serif-smallcaps"
        android:text="\n   MARCA: \n   Bimbo \n   TIPO DE PRODUCTO:\n   Pan tajado \n   GRUPO DE ALIMENTOS: \n   Cereales, Tuberculos, Raices y Platanos"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="344dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="138dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="123dp"
        tools:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Precio"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:background="@color/teal_700"
        android:text="$ 3.990"
        android:textAlignment="center"
        android:textColor="@color/color_white_t"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="298dp" />

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="194dp"
        android:layout_height="46dp"
        android:text="Pan tajado blanco familiar x 600 gr"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:id="@+id/Comentario"
        android:layout_width="216dp"
        android:layout_height="24dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Comentarios Recibidos :"
        android:textColor="@color/teal_700"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="491dp"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="335dp"
        android:layout_height="84dp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="533dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="79dp"
                android:layout_height="59dp"
                android:layout_alignParentTop="true"
                android:layout_alingParentLeft="true"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="254dp"
                android:layout_height="59dp"
                android:layout_toRightOf="@+id/imageView"
                android:fontFamily="sans-serif-smallcaps"
                android:text="ANA LOPEZ: \nDelicioso muy buena marca."
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imagePersona"
                android:layout_width="79dp"
                android:layout_height="59dp"
                android:layout_below="@+id/imageView"
                android:layout_centerVertical="true"

                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="269dp"
                android:layout_height="59dp"
                android:layout_below="@+id/textView3"
                android:layout_toRightOf="@+id/imagePersona"
                android:fontFamily="sans-serif-smallcaps"
                android:text="CARLOS RUIZ: \nMe encanta 100% recomendado."
                android:textColor="@color/black" />


        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:background="@drawable/casa2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="634dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:background="@drawable/icono"
        android:text="Button"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="481dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>